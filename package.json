{
  "name": "users-and-roles",
  "version": "0.0.1",
  "private": true,
  "author": "Patrick Recher <p@tte.io>",
  "dependencies": {
    "babel-cli": "6.14.0",
    "babel-core": "6.14.0",
    "babel-preset-es2015": "6.14.0",
    "babel-preset-stage-0": "6.5.0",
    "body-parser": "^1.15.2",
    "cookie-parser": "^1.4.3",
    "dotenv": "^4.0.0",
    "express": "^4.14.0",
    "express-session": "^1.14.2",
    "pg": "^6.1.2",
    "@project-r/auth-server": "*"
  },
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js --exec babel-node",
    "client": "cd client && PORT=3002 npm start",
    "build": "mkdir -p ./dist && npm run build-client && npm run build-server",
    "build-client": "rm -rf ./dist/client_build && cd client && npm run build && mv ./build ../dist/client_build",
    "build-server": "NODE_ENV=production babel server -d dist --presets es2015,stage-2",
    "serve": "NODE_ENV=production node dist/index.js",
    "dev": "echo \"This command has been deprecated. Use 'npm start'\" && exit 1"
  },
  "devDependencies": {
    "babel-preset-latest": "^6.22.0",
    "concurrently": "^3.1.0",
    "http-proxy": "^1.16.2",
    "nodemon": "^1.11.0"
  }
}
